<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <link href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.1.8/b-3.2.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.1.8/b-3.2.0/datatables.min.js"></script>

    <style>
        #accountsTable td {
            padding: 12px 15px; /* Adjust the padding as needed */
        }
    </style>
</head>
<body>


    <title>Account Management System</title>

    <div class="container-fluid p-3">
        <div class="row justify-content-center">

            <div class="col-10 p-0 m-0 mt-3 rounded border border-3 border-dark">
                <div class="bg-primary p-2 d-flex justify-content-between">
                    <h1 class="text-white fw-bold m-0">Accounts</h1>
                    <button class="btn btn-success">Add New Account</button>
                </div>

                <div class="p-3">
                    <table id="accountsTable" class="display table-bordered">
                        <thead>
                            <tr>
                                <th class="p-2">Name</th>
                                <th class="p-2">Email</th>
                                <th class="p-2">Status</th>
                                <th class="p-2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                        </tbody>
                    </table>
                </div>
                
            </div>

        </div>
        
    </div>





    <script>
        $(document).ready( function () {
            $('#accountsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/getallaccounts', // API route to fetch data
                    type: 'GET',
                    dataSrc: 'data' // DataTables expects data to be in the 'data' property
                },
                columns: [
                    { data: 'name' },  // Column for User
                    { data: 'user' },  // Column for User
                    { data: 'status' }, // Column for Status
                    {
                        data: null, // No data is directly associated with this column
                        render: function(data, type, row) {
                            // Render a button in each row
                            return `<button class="btn btn-sm btn-primary" onclick="login('${row.user}','${row.pass}')">Login</button>`;
                        }
                    }
                ]
            });
        } );

        function login(user, pass){
            alert(user + pass);

            $.ajax({
                url: '/login', 
                type: 'POST', 
                contentType: 'application/json',  // Specify content type as JSON
                data: JSON.stringify({ 
                    user: user,
                    pass: pass
                }),
                success: function(response) {
                    console.log(response);
                },
                error: function(xhr, status, error) {
                    console.log('Error:', error);
                }
            });
        }
    </script>
    
</body>
</html>